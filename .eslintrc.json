{
	"env": {
		"es6": true,
		"node": true
	},
	"extends": "eslint:recommended",
	"parserOptions": {
		"sourceType": "module"
	},
	"globals": {
		"app_intf" : false,
		"app_name" : false,
		"app_path" : false,
		"app_type" : false,
		"bitmask" : false,
		"bus" : false,
		"config" : false,
		"gpio" : false,
		"hex" : false,
		"host_data" : false,
		"intf": false,
		"json" : false,
		"kodi" : false,
		"log" : false,
		"notify" : false,
		"now" : false,
		"obc_values" : false,
		"os" : false,
		"pad" : false,
		"protocol" : false,
		"socket" : false,
		"status" : false,
		"update" : false
	},
	"rules": {
		"indent": [
			"error",
			"tab",
			{
				"SwitchCase": 1
			}
		],
		"linebreak-style": [
			"error",
			"unix"
		],
		"quotes": [
			"error",
			"single"
		],
		"semi": [
			"error",
			"always"
		],
		"no-unused-vars": [
			"error",
			{
				"varsIgnorePattern": "module_name"
			}
		]
	}
}
